<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/findBeerDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<RelativeLayout
	    android:id="@+id/findBeerRelLayContent"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

	    <ImageView
	        android:id="@+id/findBeerImgViewBgd"
	        style="@style/findBeerImgViewBgd"/>
		
	    <TextView
	        android:id="@+id/htmlTextView" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    
	</RelativeLayout>
	
	<ListView
	    android:id="@+id/findBeerNavDrawerListView"
	    style="@style/findBeerNavDrawerListView" />

</android.support.v4.widget.DrawerLayout>
